{
    "name": "brillicmedia/laravel-websockets",
    "version": "0.1.0",
    "description": "An easy to launch a Pusher-compatible WebSockets server for Laravel.",
    "keywords": [
        "BrillicMedia",
        "laravel-websockets",
        "laravel",
        "php"
    ],
    "license": "MIT",
    "homepage": "https://github.com/oskonnikov/laravel-websockets",
    "authors": [
        {
            "name": "Marcel Pociot",
            "email": "marcel@beyondco.de",
            "homepage": "https://beyondcode.de",
            "role": "Developer"
        },
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        },
        {
            "name": "Alex Renoki",
            "homepage": "https://github.com/rennokki",
            "role": "Developer"
        },
        {
            "name": "Oleg Skonnikov",
            "homepage": "https://BrillicMedia.ru",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "cboden/ratchet": "^0.4.4",
        "facade/ignition-contracts": "^1.0",
        "guzzlehttp/psr7": "^2.8",
        "illuminate/broadcasting": "^11.0",
        "illuminate/console": "^11.0",
        "illuminate/http": "^11.0",
        "illuminate/routing": "^11.0",
        "illuminate/support": "^11.0",
        "pusher/pusher-php-server": "^6.0|^7.0",
        "react/dns": "^1.1",
        "react/http": "^1.1",
        "react/promise": "^2.3",
        "symfony/http-kernel": "^7.0",
        "symfony/psr-http-message-bridge": "^7.0"
    },
    "require-dev": {
        "clue/buzz-react": "^2.9",
        "laravel/legacy-factories": "^1.1",
        "phpunit/phpunit": "^9.0",
        "ratchet/pawl": "^0.3.5"
    },
    "suggest": {
        "ext-pcntl": "Running the server needs pcntl to listen to command signals and soft-shutdown.",
        "doctrine/dbal": "Required to run database migrations (^2.9|^3.0)."
    },
    "autoload": {
        "psr-4": {
            "BrillicMedia\\LaravelWebSockets\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrillicMedia\\LaravelWebSockets\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "BrillicMedia\\LaravelWebSockets\\WebSocketsServiceProvider"
            ],
            "aliases": {
                "WebSocketRouter": "BrillicMedia\\LaravelWebSockets\\Facades\\WebSocketRouter"
            }
        }
    }
}
